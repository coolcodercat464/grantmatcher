    <script>
        function deleteResearcher() {
            reason = document.getElementById('deleteReason').value
            document.getElementById('modal3').style.display = 'none'
            
            if (reason.trim() == '') {
                document.getElementById('showAlert').textContent = 'Please ensure that you state the reason you are deleting the researcher.'
                openModal(2)
            } else {
                fetch('/deleteresearcher/<%= id %>', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({reason: reason})
                }).then(response => response.json()).then(data => {
                    if (data.success == 'success') {
                        window.location.href = '/'
                    } else {
                        document.getElementById('showAlert').textContent = data.alert
                        openModal(2)
                    }
                })
            }
        }
    </script>

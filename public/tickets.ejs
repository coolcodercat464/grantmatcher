                        <li><a class="dropdown-item" href="/settings">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <!-- Logout button (opens a modal) -->
                        <li><button class="dropdown-item" id="modalBtn1" onclick="openModal(1)">Logout</button></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- The modal the logout button in the navigation bar opens -->
    <div id="modal1" class="modal">
        <div class="modal-body">
            <div class="together">
                <h2>Log out</h2>
                <!-- Numbering the IDs so I can use many modals (code reuse) -->
                <span class="close" id="close1">&times;</span>
            </div>
            
            <!-- Confirmation message (for user control) -->
            <p>Are you sure you want to log out?</p>
            <!-- TODO: remove spacing between all buttons like this: -->
            <div class="together">
                <form method="post" action="/">
                    <input type="submit" value="Logout!" class="buttonStyle">
                </form>
                <button id='cancel1' class="buttonStyle">Cancel</button>
            </div>
        </div>
    </div>

    <!-- Error modal -->
    <div id="modal2" class="modal">
        <div class="modal-body">
            <div class="together">
                <h2>Error!</h2>
                <!-- Numbering the IDs so I can use many modals (code reuse) -->
                <span class="close" id="close2">&times;</span>
            </div>
            <hr/>
            
            <p id="showAlert"><%= showAlert %></p>
        </div>
    </div>

    <!-- The modal to search for tickets -->
    <div id="modal3" class="modal">
        <div class="modal-body">
            <div class="together">
                <h2>Search Tickets</h2>
                <!-- Numbering the IDs so I can use many modals (code reuse) -->
                <span class="close" id="close3">&times;</span>
            </div>

            <div class="together">
                <div style="width: 100%;">
                    <label><b>TITLE</b></label>
                    <input type="text" id="title" class="form-control" name="title" placeholder="Enter a part of the ticket's title">
                </div>
                
                <div style="width: 100%;">
                    <label><b>POSTER</b></label>
                    <!-- script.js will fill this with all the user names -->
                    <select name="ticketPoster" id="ticketPoster" style="width: 100%" class="form-control">
                        <option value="all">Any</option>
                    </select>
                </div>
            </div>
            <br>

            <div class="together">
                <div style="width: 100%;">
                    <label><b>MEMBERS</b>
                        <button type="button" class="btn" data-toggle="tooltip" data-placement="top" title="Select a user who is a member of the ticket (i.e., they are able to view the ticket and post replies).">
                            <!-- Makes the tooltip circular -->
                            <i class="fa fa-question" style="border-radius: 70%; border: 2px solid black; padding: 1px 5px 1px 4px;"></i>
                        </button>
                    </label>
                    <!-- script.js will fill this with all the user names -->
                    <select name="ticketMember" id="ticketMember" style="width: 100%" class="form-control">
                        <option value="all">Any</option>
                    </select>
                </div>
                
                <div style="width: 100%;">
                    <label><b>TAGS</b>
                        <button type="button" class="btn" data-toggle="tooltip" data-placement="top" title="Select a tag to search in. These are broad categories about a ticket's topic.">
                            <!-- Makes the tooltip circular -->
                            <i class="fa fa-question" style="border-radius: 70%; border: 2px solid black; padding: 1px 5px 1px 4px;"></i>
                        </button>
                    </label>
                    <select name="tags" id="tags" style="width: 100%" class="form-control">
                        <option value="all">Any</option>
                        <option value="bug">Bug Report</option>
                        <option value="feedback">Feedback</option>
                        <option value="inquiry">Inquiry</option>
                        <option value="report">User Report</option>
                        <option value="help">Tech Help</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>
            <br>

            <div class="together">
                <div style="width: 100%;">
                    <label><b>DATE ADDED</b></label>
                    <div class="together datetogether">
                        <input type="date" id="dateLower" class="form-control" name="dateLower" style="width: 100%"><p style="margin-left: 5px; margin-right: 5px;">to</p><input type="date" class="form-control" id="dateHigher" name="dateHigher" style="width: 100%">
                    </div>
                </div>
                
                <div style="width: 100%;">
                    <label><b>RESOLVED?</b>
                        <button type="button" class="btn" data-toggle="tooltip" data-placement="top" title="Tickets are unresolved when the poster is still waiting for a solution or a resolution to their problem.">
                            <!-- Makes the tooltip circular -->
                            <i class="fa fa-question" style="border-radius: 70%; border: 2px solid black; padding: 1px 5px 1px 4px;"></i>
                        </button>
                    </label>
                    <select name="resolved" class="form-control" id="resolved" style="width: 100%">
                        <option value="all">Any</option>
                        <option value="yes">Resolved</option>
                        <option value="no">Unresolved</option>
                    </select>
                </div>
            </div>
            <br>

            <div class="together">
                <div style="width: 100%;">
                    <button class="buttonStyle blue" style="width: 100%;" onclick="resetTicketSearch(10, 3)">Reset Form</button><br>
                </div>
                
                <div style="width: 100%;">
                    <button class="buttonStyle pink" style="width: 100%;" onclick="searchTicket(10, 3)">Search</button>
                </div>
            </div>
            <br>
        </div>
    </div>

    <!-- The modal to open a ticket -->
    <div id="modal4" class="modal">
        <div class="modal-body">
            <div class="together">
                <h2>Open a Ticket</h2>
                <!-- Numbering the IDs so I can use many modals (code reuse) -->
                <span class="close" id="close4">&times;</span>
            </div>

            <div style="width: 100%;">
                <label><b>TITLE</b></label>
                <input type="text" id="newTitle" class="form-control" name="newTitle" placeholder="Enter the ticket's title" required>
            </div><br>

            <div class="together">
                <div style="width: 100%;">
                    <label><b>TAGS</b>
                        <!-- TODO: add tooltip -->
                    </label><br>
                    <select name="newTags" id="newTags" class="form-control" style="width: 100%" multiple>
                        <option value="bug">Bug Report</option>
                        <option value="feedback">Feedback</option>
                        <option value="inquiry">Inquiry</option>
                        <option value="report">User Report</option>
                        <option value="help">Tech Help</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                
                <div style="width: 100%;">
                    <label><b>MEMBERS</b>
                        <!-- TODO: add tooltip -->
                    </label><br>
                    <select name="newMembers" id="newMembers" class="form-control" style="width: 100%" multiple>
                    </select>
                </div>
            </div>
            <br>

            <div>
                <label><b>CONTENT</b>
                    <!-- TODO: add tooltip -->
                </label><br>
                <textarea id="newContent" name="newContent" class="form-control" style="width: 100%"></textarea>
            </div><br>

            <div class="together">
                <div style="width: 100%;">
                    <button id='cancel4' class="buttonStyle blue" style="width: 100%;">Cancel</button>
                </div>
                
                <div style="width: 100%;">
                    <button class="buttonStyle pink" style="width: 100%;" onclick="openModal(5); document.getElementById('modal4').style.display = 'none'">Open Ticket</button>
                </div>
            </div>
            <br>
        </div>
    </div>

    <!-- Confirmation modal before adding a new ticket -->
    <div id="modal5" class="modal">
        <div class="modal-body">
            <div class="together">
                <h2>Open Ticket</h2>
                <!-- Numbering the IDs so I can use many modals (code reuse) -->
                <span class="close" id="close5">&times;</span>
            </div>
            
            <!-- Confirmation message (for user control) -->
            <p>Are you sure you want to open this ticket? You can go make to the previous modal to proof-read the ticket before opening it.</p>
            <div class="together">
                <button class="buttonStyle" onclick="addTicket()">Open Ticket</button>
                <button id='cancel5' class="buttonStyle">Cancel</button>
            </div>
        </div>
    </div>

    <!-- When the user didn't fill in all the inputs correctly (front-end check) -->
    <div id="modal6" class="modal">
        <div class="modal-body">
            <div class="together">
                <h2>Woops!</h2>
                <!-- Numbering the IDs so I can use many modals (code reuse) -->
                <span class="close" id="close6">&times;</span>
            </div>
            <hr/>
            
            <p>Please ensure that you have filled in all areas.</p>
        </div>
    </div>

    <!-- Another error modal (alerts here come from the backend) -->
    <div id="modal7" class="modal">
        <div class="modal-body">
            <div class="together">
                <h2>Error!</h2>
                <!-- Numbering the IDs so I can use many modals (code reuse) -->
                <span class="close" id="close7">&times;</span>
            </div>
            <hr/>
            
            <p id="showAlert"></p>
        </div>
    </div>

    <!-- The modal when the user tries to filter a table but nothing is found -->
    <div id="modal8" class="modal">
        <div class="modal-body">
            <div class="together">
                <h2>Nothing Found</h2>
                <!-- Numbering the IDs so I can use many modals (code reuse) -->
                <span class="close" id="close8">&times;</span>
            </div>
            
            <p>Nothing was found in this search :( Reset the form or try different parameters.</p>
        </div>
    </div>

    <!-- The main content -->
    <main>
        <section>
            <h1>Tickets</h1>
        </section>
        <hr/>

        <section>
            <h2>All Tickets</h2>
            <div class="tableContainer" id="tableContainer2">
                <div>
                    <div class="tableicons">
                        <button type="button" class="btn" style="padding-left: 0" data-toggle="tooltip" data-placement="top" title="Filter Tickets">
                            <i onclick="openModal(3)" class="fa fa-search"></i>
                        </button>
                        <button type="button" class="btn" style="padding-left: 0" data-toggle="tooltip" data-placement="top" title="Add a Ticket">
                            <i onclick="openModal(4)" class="fa fa-plus-square-o"></i>
                        </button>
                    </div>
                    <div class="tablesort">
                        <label for="sortTable10">Sort By:</label>

                        <select name="sortTable10" id="sortTable10" onchange="sortTable(10)" style="margin-bottom: 5px;">
                            <option value="blahblah" default>Select</option>
                            <option value="username">Poster's Name</option>
                            <option value="ticketDate">Date</option>
                            <option value="memberNumber"># of Members</option>
                            <option value="replyNumber"># of Replies</option>
                        </select>
                    </div>
                </div>

                <div class="scrollTableContainer">
                    <table class="table table-bordered" style="margin-bottom: 0; border-top: 1px solid black; border-right: 1px solid black; border-left: 1px solid black;">
                        <thead>
                            <!-- Column names -->
                            <tr>
                            <th>Information</th>
                            </tr>
                        </thead>
                        <!-- Table items -->
                        <tbody id="tableBody10"></tbody>
                    </table>
                </div>

                <!-- Table footer (with pagination controls and download button) -->
                <div class="pagination-controls" style="border: 1px solid black; margin-top: 0;">
                    <!-- The download button should be left-aligned while the rest is right-aligned -->
                    <!-- align-items-center ensures that the text and icons are aligned properly (otherwise the text sticks out vertically and its distracting) -->
                    <div class="d-flex align-items-center gap-2 d-flex w-100 px-3 py-2">
                        <div>
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-download"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">XML</a></li>
                                    <li><a class="dropdown-item" href="#">CSV</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="ms-auto">
                            <!-- Numbering the IDs so I can use many tables (code reuse) -->
                            <button class="btn" id="firstNav10" onclick="goToFirst(10)"><i class="fa fa-angle-double-left"></i></button>
                            <button class="btn" id="prevNav10" onclick="goToPrev(10)"><i class="fa fa-angle-left"></i></button>
                            <!-- Tells the user what page they are on -->
                            <span id="pageStats10"></span>
                            <button class="btn" id="nextNav10" onclick="goToNext(10)"><i class="fa fa-angle-right"></i></button>
                            <button class="btn" id="lastNav10" onclick="goToLast(10)"><i class="fa fa-angle-double-right"></i></button>

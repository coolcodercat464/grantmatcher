    <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
    <!-- This file allows for the user to interact with the elements on the site and for the site to give feedback to the user -->
    <script src="script.js"></script>
    <!-- JQuery for the tooltip -->
    <script>
        $(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
    </script>
    <script>
        // show alerts
        if ("<%= showAlert %>" != "no") {
            openModal(2);
        }
    </script>
    <script>
        // get all the ticket information to be presented in the table
        <% for (var i = 0 ; i < tickets.length ; i++) { %>
            ticketString = ''
            ticketData = {}

            // add ticket link
            ticketString += '<p><a href="ticket/<%= tickets[i].ticketID %>">'
            // get resolution status
            resolved = 'yes'
            <% if (tickets[i].resolutionDetails.length == 0) { %>
                ticketString += '<i class="fa fa-circle-o"></i> '
                resolved = 'no'
            <% } else { %>
                ticketString += '<i class="fa fa-check-circle"></i> '
            <% } %>

            // ticket title
            ticketString += '<b><%= tickets[i].title %>'

            // add information for the tags
            ticketTags = []
            ticketTagsPresent = []
            <% if (tickets[i].tags.includes('other')) { %>
                ticketTags.push('other')
                ticketTagsPresent.push('Other')
            <% } %>
            <% if (tickets[i].tags.includes('bug')) { %>
                ticketTags.push('bug')
                ticketTagsPresent.push('Bug Report')
            <% } %>
            <%  if (tickets[i].tags.includes('feedback')) { %>
                ticketTags.push('feedback')
                ticketTagsPresent.push('Feedback')
            <% } %>
            <%  if (tickets[i].tags.includes('inquiry')) { %>
                ticketTags.push('inquiry')
                ticketTagsPresent.push('Inquiry')
            <% } %>
            <%  if (tickets[i].tags.includes('report')) { %>
                ticketTags.push('report')
                ticketTagsPresent.push('User Report')
            <% } %>
            <% if (tickets[i].tags.includes('help')) { %>
                ticketTags.push('help')
                ticketTagsPresent.push('Tech Help')
            <% } %>

            if (ticketTagsPresent.length > 0) {
                ticketString += ' (' + ticketTagsPresent.join(', ') + ')'
            }

            // ticket member information
            ticketString += ' - </b><%= tickets[i].username %>'

            <% if (tickets[i].members.length > 1) { %>
                ticketString += ' + <%= tickets[i].members.length - 1 %> others'
            <% } %>
            
            // add preview for content
            ticketString += '</a></p><p><b><%= tickets[i].ticketDate %></b> <%= tickets[i].content.slice(0, 50) %></p>'

            // add to data
            ticketData.ticketString = ticketString
            ticketData.username = '<%= tickets[i].username %>'
            ticketData.email = '<%= tickets[i].userEmail %>'
            ticketData.ticketDate = "<%= tickets[i].ticketDate.split('-').reverse().join('/') %>"
            ticketData.memberNumber = "<%= tickets[i].members.length %>"
            ticketData.replyNumber = "<%= tickets[i].replies.length %>"
            ticketData.title = "<%= tickets[i].title %>"
            ticketData.content = "<%= tickets[i].content %>"
            ticketData.tags = ticketTags
            ticketData.resolved = resolved
            ticketData.date = '<%= tickets[i].ticketDate %>'

            // get members
            members = []
            <% for (x in tickets[i].members) { %>
                members.push('<%= tickets[i].members[x] %>')
            <% } %>

            ticketData.members = members

            tableData[10].dataSet.push(ticketData)
            tableData[10].showRows.push(ticketData)
        <% } %>

        renderTable(10)
    </script>
    <script>
        function addTicket() {
            document.getElementById('modal5').style.display = 'none'

            // get all the user input
            title = document.getElementById('newTitle').value
            tags = Array.from(document.getElementById('newTags').options)
                .filter(option => option.selected)
                .map(option => option.value);
            members = Array.from(document.getElementById('newMembers').options)
                .filter(option => option.selected)
                .map(option => option.value);
            content = document.getElementById('newContent').value
            
            // open error modal if its invalid
            if (title.trim() == '' || content.trim() == '') {
                openModal(6)
                return
            }

            // turn the info into a json format
            data = {
                'title': title,
                'tags': tags,
                'members': members,
                'content': content
            }

            // add the code to the database
            fetch('/addticket', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            }).then(response => response.json()).then(result => {
                document.getElementById("modal3").style.display = 'none'
                if (result.status == "error") {
                    // open the error modal if there is an error
                    console.log(result)
                    document.getElementById('showAlert').textContent = result.alert
                    openModal(7)
                } else {
                    window.location.href = '/ticket/' + result.id
                }
            })
        }
    </script>
</body>
</html>